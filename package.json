{
  "name": "generator-epochly",
  "version": "0.0.1",
  "description": "Generator for use with internal development of the epochly app",
  "homepage": "https://github.com/4thought-studios/generator-epochly",
  "author": {
    "name": "Brad Dunn",
    "email": "brad.dunn@4thoughtstudios.com",
    "url": "https://4thoughtstudios.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "epochly",
    "4thought-studios",
    "yeoman-generator"
  ],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^6.1.1",
    "nsp": "^2.8.0",
    "prettier": "^1.11.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/generators/app/templates/"
    ]
  },
  "scripts": {
    "prepublishOnly": "./node_modules/.bin/nsp check",
    "pretest": "./node_modules/.bin/eslint .",
    "precommit": "./node_modules/.bin/lint-staged",
    "test": "./node_modules/.bin/jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "4Thought-Studios/generator-epochly",
  "license": "MIT"
}
